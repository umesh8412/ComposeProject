<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AnimalFactsCompose" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimalFactsCompose</item>
        <!-- Explicitly disable action bar for splash screen -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>